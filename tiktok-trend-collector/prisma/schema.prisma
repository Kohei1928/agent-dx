// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ユーザー情報（認証用）
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  accounts      Account[]
  sessions      Session[]
  settings      Settings?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

// NextAuth.js用のアカウントモデル
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth.js用のセッションモデル
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth.js用の認証トークンモデル
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// アプリ設定（フィルタ条件、スプレッドシートID等）
model Settings {
  id              String   @id @default(cuid())
  userId          String   @unique
  minViews        Int      @default(0)          // 最低再生回数
  minLikes        Int      @default(0)          // 最低いいね数
  sortBy          String   @default("views")    // ソート基準: views or likes
  spreadsheetId   String?                       // GoogleスプレッドシートID
  executionTime   String   @default("09:00")    // 実行時刻（JST）
  fetchCount      Int      @default(50)         // 取得件数
  postedWithinDays Int     @default(7)          // 投稿日フィルタ（過去N日以内）
  region          String   @default("JP")       // 取得地域（国コード）
  notifyEmail     String?                       // 通知先メールアドレス
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("settings")
}

// 収集した動画データ
model Video {
  id            String   @id @default(cuid())
  videoId       String   @unique               // TikTokの動画ID
  title         String   @db.Text              // 動画タイトル（説明文）
  url           String                         // 動画URL
  views         BigInt                         // 再生回数
  likes         BigInt                         // いいね数
  authorName    String                         // 投稿者名
  postedAt      DateTime                       // 投稿日
  thumbnailUrl  String?                        // サムネイルURL
  musicName     String?                        // 使用楽曲名
  collectedAt   DateTime                       // 収集日時
  createdAt     DateTime @default(now())

  @@index([collectedAt])
  @@index([views])
  @@index([likes])
  @@map("videos")
}

// 実行履歴
model ExecutionLog {
  id           String   @id @default(cuid())
  executedAt   DateTime @default(now())       // 実行日時
  status       String                         // 実行ステータス: success, failed
  videoCount   Int      @default(0)           // 取得件数
  errorMessage String?  @db.Text              // エラーメッセージ
  createdAt    DateTime @default(now())

  @@index([executedAt])
  @@map("execution_logs")
}
